<div id="events-index">

  <div class="header">
    <p id="notice"><%= notice %></p>
    <h1>Listing Events</h1>
    <%= link_to 'New Event', new_event_path %>


   <form class="navbar-form navbar-left">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
  </div>

  <div id="events">
    <% @events.each do |event| %>
    <div class="event">
      <span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span>
      <a href="<%= event_path(event) %>"><h2><%= event.name.titleize %></h2></a> 
      <p><%= event.start_date.strftime("%l:%M %p %A, %b %d %Y") %></p>
      <a href="<%= event_path(event) %>"><%= image_tag "http://placekitten.com/700/200" %></a>
      <p><%= event.street_line1 %>,  <%= event.city %></p>
      <p><%= truncate(event.description, :length => 200, :separator => '', omission: '...(continued)') %></p>

      <% if logged_in? && (current_user == event.user  || current_user.admin?) %>
      <div class="action-buttons">
      <%= link_to 'Show', event, class: "btn btn-info btn-sm" %>
      <%= link_to 'Edit', edit_event_path(event), class: "btn btn-primary btn-sm" %>
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

</div>


