<p id="notice"><%= notice %></p>

<div id="event-show">
  <div id="event-show-container">

    <div class="header">
      <h1><%= @event.name.titleize %></h1>
      <% if @event.cancelled? %>
        <p>Event Cancelled!!!!!!!!!</p>
      <% end %>
      <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary btn-sm" %>
      <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </br>
      </br>

      <div class="header-image"></div>

    </div>

    <div class="event-info">

      <div class="right-col">
         <h2>Details</h2>
        <% if @event.website %>
        <strong>Website: </strong><a href="<%= @event.website %>"><%= @event.website %></a></br></br>
        <% end %>
        <p> <%= @event.description %></p>

        <% if @event.user %>
        <p>Created By: <%= link_to @event.user.first_name, user_path(@event.user) %></p>
       <% end %>
      </div>

      <div class="left-col">
        <strong>Dates</strong>
        <p><%= @event.start_date.strftime("%l:%M %p %A, %b %d %Y") %> - 
        </br>
        <%= @event.end_date.strftime("%l:%M %p %A, %b %d %Y") %></p>

        <strong>Address</strong>
        <p>
        <% if @event.company_name %>  
        <%= @event.company_name %>
        </br>
        <% end %>
        <% if @event.address_line1 %>  
        <%= @event.address_line1 %>
        </br>
        <% end %>
        <% if @event.address_line2 %>  
        <%= @event.address_line2 %>
        </br>
        <% end %>
        <%= @event.city %>
        <%= @event.state %>
        <%= @event.zip %>
        </p>
        </br>

        <%= image_tag 'https://maps.googleapis.com/maps/api/staticmap?center=' + @event.latitude.to_s + ',' + @event.longitude.to_s + '&zoom=12&size=600x300' %>
      </div>

    </div>

  </div>
</div>




